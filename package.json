{
  "name": "@icco/robot.villas",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --fix src/ && yarn fmt:yaml",
    "fmt:yaml": "find . \\( -name '*.yml' -o -name '*.yaml' \\) -not -path './node_modules/*' -not -path './.next/*' -exec yq -iP '.' {} \\;",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@fedify/fedify": "^2.0.0",
    "@fedify/next": "^2.0.0",
    "@fedify/postgres": "^2.0.0",
    "@fedify/vocab": "^2.0.0",
    "@heroicons/react": "^2.2.0",
    "@js-temporal/polyfill": "^0.5.1",
    "@logtape/logtape": "^2.0.2",
    "daisyui": "^5",
    "drizzle-orm": "^0.45.1",
    "escape-html": "^1.0.3",
    "js-yaml": "^4.1.0",
    "mastodon-widget": "^0.2.1",
    "next": "^15.3.3",
    "postgres": "^3.4.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rss-parser": "^3.13.0",
    "tailwindcss": "^4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@next/eslint-plugin-next": "^16.1.6",
    "@tailwindcss/postcss": "^4",
    "@types/escape-html": "^1.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^10",
    "postcss": "^8.5.6",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
